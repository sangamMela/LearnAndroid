<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_marginLeft="@dimen/akharaas_information_margin"
        android:layout_marginRight="@dimen/akharaas_information_margin"
        android:layout_marginTop="@dimen/akharaas_information_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/akharaas_information_padding_top_bottom"
        android:paddingTop="@dimen/akharaas_information_padding_top_bottom" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/akharaas_information_padding_left_right"
            android:paddingRight="@dimen/akharaas_information_padding_left_right" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/akharaaPic"
                    android:layout_width="@dimen/akharaas_information_pic"
                    android:layout_height="@dimen/akharaas_information_pic"
                    android:scaleType="fitXY" >
                </com.android.volley.toolbox.NetworkImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_profile_info_padd" >

                <TextView
                    android:id="@+id/akharaaName"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textColor="@color/actionbar_background"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/akharaas_information_details_pad_left_right"
                    android:paddingRight="@dimen/akharaas_information_details_pad_left_right"/>

                <TextView
                    android:id="@+id/akharaaDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/akharaas_information_details_pad_left_right"
                    android:paddingRight="@dimen/akharaas_information_details_pad_left_right"
                    android:paddingTop="@dimen/akharaas_information_details_pad_top"
                    android:paddingBottom="@dimen/akharaas_information_details_pad_top"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>